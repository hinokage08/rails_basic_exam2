<h2>お気に入り一覧</h2>

<% @user.favorites.each do |favorite| %>

<div class="user_timeline">
  <div class="user_name">
    <%= favorite.website.user.name %>
  </div>
  <div class="user_image">
    <%= image_tag(favorite.website.image.url) if favorite.website.image && favorite.website.image.url %>
  </div>
  <div class="user_content">
    <%= favorite.website.content %>
  </div>
</div>

<% end %>
