<%= form_with(model: @website, local: true , url: choose_new_or_edit ) do |form| %>
  <% if @website.errors.any? %>
      <div id="error_explanation">
        <h2><%= @website.errors.count %>件のエラーがあります。</h2>
        <ul>
        <% @website.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="Website_content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <div class="Website_image">
      <%= image_tag(@website.image.url) if @website.image && @website.image.url %>
      <%= form.file_field :image %>
      <%= form.hidden_field :image_cache %>
    </div>
    <%= form.submit %>
  <% end %>

<%= link_to '一覧に戻る', websites_path %>
