<h1>詳細画面</h1>

<% unless @website.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(website_id: @website.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<p>内容: <%= @website.content %></p>
<%= link_to '一覧に戻る', websites_path %>
